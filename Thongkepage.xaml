<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DACS_1.Thongkepage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DACS_1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto,*,Auto,*">
        <TextBlock Text="Biểu đồ Nạp Tiền"
               FontSize="20"
               FontWeight="Bold"
               Margin="10"
               Grid.Row="0"/>
        <lvc:CartesianChart Grid.Row="1"
        Series="{Binding NapTienSeries}"
        XAxes="{Binding NapTienLabelsAxis}"
        YAxes="{Binding ValueAxis}"
        
        Margin="10"/>

        <TextBlock Text="Biểu đồ Hóa Đơn"
               FontSize="20"
               FontWeight="Bold"
               Margin="10"
               Grid.Row="2"/>
        <lvc:CartesianChart
        Series="{Binding HoaDonSeries}"
        XAxes="{Binding HoaDonLabelsAxis}"
        YAxes="{Binding ValueAxis}"
        
        Margin="10"
        Grid.Row="3"/>
    </Grid>


</Page>
